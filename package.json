{
  "name": "exfat",
  "version": "1.0.0",
  "description": "EXFAT - Frame Data Tool for Windows",
  "author": "EXFAT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "cd fat && npm run build",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.exfat.app",
    "productName": "EXFAT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "fat/build/**/*",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Omnisulashu",
        "repo": "exfat-desktop"
      }
    ]
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
